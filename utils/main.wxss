.imgview {
  position: relative;
  width: 30vw;
  padding-bottom: 20vw;
  /*margin-top: 5px*/
}

/* 横向滑动 */

.scroll-x-header {
  white-space: nowrap !important;
}

.scroll-x-view {
  display: inline-block !important;
  width: 22vw;
  height: 22vw;
  background: #f2f2f2;
  border-radius: 5px;
  margin-left: 25rpx;
}

button::after {
  border: none;
}

.form-btn .mui-table-view-cell::after {
  position: absolute;
  bottom: 0;
  left: 15rpx;
  right: 15rpx;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #c8c7cc;
}

.form-btn {
  border: none;
  border-radius: 0;
  text-align: left;
  padding: 15rpx 25rpx;
  margin: 0;
  line-height: 1.5;
  background-color: transparent;
}

.nextpage .form-btn {
  text-align: right;
}

