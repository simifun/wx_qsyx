<!--pages/detail/gifdetail.wxml-->
<view class="page">
  <!-- 正文 -->

  <view class="page-section page-section-spacing">
    <swiper interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px" bindchange="changePageNum" current='{{current}}'>
      <block wx:for="{{items}}" wx:key="*this">
        <swiper-item>
          <view class="imgview">
            <image id="imgBox" mode="aspectFit" data-src="{{item.imgId}}" lazy-load="true" src="{{item.imgId}}" catchtap='openImgView' catchlongpress='saveImg'></image>
          </view>
        </swiper-item>
      </block>
    </swiper>
    <view class='bottom-textview'>
      <view class='flex-container'>
        <view class='detail-type'>
          <text style='color:yellow;'>#</text>{{article.typeName}}</view>
        <view class='detail-index'>{{indexN+1}}/{{items.length}}</view>
      </view>
      <view style="margin:15rpx 0">{{firstItem.text}}</view>
    </view>
  </view>
</view>

<view class="bottom-bar">
  <input class='bottom-bar-input' placeholder="我来说两句"></input>
  <view class='icon-vertical-ab' bindtap='nice'>
    <view class='{{niceClass}}'></view>
    <view class='icon-text-box' style='left:63vw;'>
      <view class='icon-text'>{{article.niceNum}}</view>
    </view>
  </view>
  <view class='icon-vertical' bindtap='tap_comment' style='margin-left:14%'>
    <text class='iconfont icon-interactive_fill myicon'></text>
    <view class='icon-text-box'>
      <view class='icon-text'>{{article.readTime}}</view>
    </view>
  </view>
  <view class='icon-vertical' bindtap='tap_share'>
    <text class='iconfont icon-share_fill myicon'></text>
    <view class='icon-text-box'>
      <view class='icon-text'>{{article.niceNum}}</view>
    </view>
  </view>
</view>