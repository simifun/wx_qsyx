/* pages/html/home.wxss */
@import "../../utils/iconfont.wxss";
@import "../../utils/main.wxss";

.label {
  position: relative;
  display: inline-block;
  padding: 5px 7px;
  font-size: 12px;
  line-height: 13px;
  color: #fff;
  vertical-align: baseline;
  white-space: nowrap;
  background-color: #63b4f0;
}

.hotvideo {
  color: #ff7878;
}

.label-1 {
  background-color: #ff7878;
}

.label-2 {
  background-color: #f9c909;
}

.label-3 {
  background-color: #24f00c;
}

.home-dz {
  font-size: 25rpx;
  color: white;
}

.row-padding {
  font-size: 28rpx;
}

.lunboImage {
  background: #222;
  width: 22vw;
  height: 22vw;
  justify-content: center;
}

.lunboImage image {
  width: 100%;
  height: 100%;
  margin: auto;
  opacity: 0.6;
}

.banner-type {
  z-index: 1;
  position: absolute;
  font-weight: bold;
  font-size: 16px;
  line-height: 20px;
  color: white;
  top: 10rpx;
  left: 15rpx;
}

.banner-title {
  z-index: 1;
  position: absolute;
  color: white;
  line-height: 14px;
  font-size: 12px;
  font-weight: 100;
  top: 30px;
  left: 15rpx;
}

.tomain {
  padding-top: 20rpx;
  padding-right: 30rpx;
  font-size: 30rpx;
  line-height: inherit;
  text-align: right;
  background: white;
}

.icon-more {
  color: #45bcf9;
}

.cuigeng {
  background: #f2f2f2;
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  float: right;
  color: gray;
  box-sizing: border-box;
}

.end-view {
  background: #f2f2f2;
  margin-top: 20rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: gray;
  text-align: center;
}
